{
    "compilerOptions": {
        "paths": { "*": ["types/*"] },
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./src"
    },
    "include": [
        "src/**/*.ts", "config/config.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}